<div class="bg-gray-200 flex flex-col justify-center items-center h-screen">
    <form class="signup-form bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <h1 class="text-center text-xl font-bold mb-4">Create an account!</h1>
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="username-signup">Username:</label>
            <input
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                type="text" id="username-signup" />
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="email-signup">Email:</label>
            <input
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                type="text" id="email-signup" />
        </div>
        <div class="mb-6">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="password-signup">Password:</label>
            <input
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
                type="password" id="password-signup" />
        </div>
        <div class="flex items-center justify-center">
            <button class="bg-gray-800 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                type="submit">Sign Up</button>
        </div>
        <p class="text-center text-gray-700 text-xs mt-4"><a href="/">Already have
                an account?</a></p>
    </form>
</div>

<script src="/js/signup.js"></script>