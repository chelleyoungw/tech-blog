<form class="w-11/12 mx-auto my-4 bg-gray-100 shadow-lg rounded overflow-hidden border border-gray-800">
    <div class="flex items-center justify-between px-4 py-2 bg-gray-800 text-white">
        <h2><input class="bg-gray-800 text-white w-full px-4 py-2" id="editPostTitleArea" type="text"
                value="{{{chosenPost.title}}}" /></h2>
    </div>
    <div class="p-4 bg-white">
        <p><textarea class="w-full px-4 py-2 text-gray-700 border rounded-lg focus:outline-none"
                id="editPostContentArea" rows="5">{{{chosenPost.content}}}</textarea></p>
        <div class="flex justify-end h-7">
            <button class="text-blue-500 hover:underline mr-2" id="editPostSubmitBtn">Submit</button>
            <a href="/{{{chosenPost.id}}}" class="text-red-500 hover:underline mr-2">Cancel</a>
        </div>
    </div>

</form>

<script src="/js/editPost.js"></script>